extends layout

block content 
  h1= title

  if game_list.length
    p #[strong Delete the following games before attempting to delete this book.]
    ul 
      each game in game_list 
        li 
          a(href=game.url) #{game.title}
  else 
    p Are you sure you want to delete category #{category.name}
    form(method='POST' action='')
      button.btn.btn-primary(type='submit') Delete
