extends layout

block content
  h1= title
  form(method="POST" action='' enctype="multipart/form-data")
    div.form-group
      label.form-label(for='title') Title
      input#title.form-control(placeholder="Game title" name="title" required='true' value=(undefiend===game ? '' : game.title ))
    div.form-group
      label(for='description') Description 
      textarea#description.form.form-control(placeholder='Game description' name='description' required='true') #{ (undefiend === game ? '' : game.description) }
    div.form-group
      label(for='price') Price 
      input#price.form-control(type='number' placeholder='Game price' name='price' required='true' value=(undefiend === game ? '' : game.price))
    div.form-group
      label(for='stock') Stock 
      input#stock.form-control(type='number' placeholder='Game stock' name='stock' required='true' value=(undefiend === game ? '' : game.stock))
    div.form-group
      label Genre:
      div
        for category in category_list
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox' name='category'  id=category._id value=category._id checked=category.checked) 
            lable(for=category._id) #{category.name} 
      div.form-group(style='margin-top:1rem;')
        label(for='image' style='cursor:pointer;display:flex;flex-direction:column; width:100px; align-items:center; font-size:1rem;') Upload Image 
        input#image(type='file' name='image')

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul 
      for error in errors 
        li!=error.msg
